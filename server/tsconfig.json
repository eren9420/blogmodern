// server/tsconfig.json
{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node", // Ensure this is set correctly
       "resolveJsonModule": true  // Often helpful
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }